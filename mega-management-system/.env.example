# Server Configuration
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/mega_management
DB_NAME=mega_management

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRE=7d

# WhatsApp Business API
WHATSAPP_API_URL=https://api.whatsapp.com/send
WHATSAPP_TOKEN=your_whatsapp_business_api_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Cloudinary (for image storage)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Google AI APIs (Required for OCR and Image Analysis)
# Get Gemini API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key

# Get Vision API key from: https://console.cloud.google.com/apis/credentials
GOOGLE_VISION_API_KEY=your_google_vision_api_key

# Client URL (set to your Cloud Run URL in production)
CLIENT_URL=http://localhost:3000

# Cloud Run specific settings (optional)
# Set DISABLE_CRON=true to use Cloud Scheduler instead of internal cron
DISABLE_CRON=false
SCHEDULER_SECRET=your_scheduler_secret_for_cloud_run